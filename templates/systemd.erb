[Unit]
Description=Statsite Collector
Wants=basic.target
After=basic.target network.target

[Service]
ExecStart=<%= @install_path %>/current/statsite -f <%= @config_file %>
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure
RestartSec=42s
User=<%= @user %>
Group=<%= @group %>

[Install]
WantedBy=multi-user.target
